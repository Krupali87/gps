<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        >

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgBackView"
            android:background="@drawable/ripple_oval_click_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_back_search_view"
            android:layout_marginHorizontal="15dp"/>

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_header">

            <LinearLayout
                android:background="@drawable/bg_search_zone"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <androidx.appcompat.widget.SearchView
                    android:theme="@style/ZoneAlertSearchView"
                    android:id="@+id/searchView"
                    android:background="@null"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    app:closeIcon="@drawable/ic_close_search"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@null"
                    app:queryHint="@string/create_zone_hint_search_location"
                    app:searchIcon="@drawable/ic_search"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

        <fragment
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_zone_info"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgZone"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintBottom_toTopOf="@+id/layout_zone_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llToolbar"
        app:srcCompat="@drawable/vector_zone_safe"/>

        <ImageView
            android:id="@+id/imgMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_marker_zone_safe"
            app:layout_constraintBottom_toBottomOf="@+id/imgZone"
            app:layout_constraintEnd_toEndOf="@+id/imgZone"
            app:layout_constraintStart_toStartOf="@+id/imgZone"
            app:layout_constraintTop_toTopOf="@+id/imgZone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_zone_info"
        android:background="@drawable/bg_list_user_tracking"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingTop="@dimen/_25sdp"
        android:paddingRight="@dimen/_14sdp"
        android:paddingBottom="@dimen/_14sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:textColor="#0e1724"
            android:textColorHint="#6f7b8c"
            android:id="@+id/et_name_zone"
            android:background="@drawable/bg_input_dialog"
            android:padding="12dp"
            android:focusable="true"
            android:clickable="true"
            tools:ignore="TextSizeCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/zone_name"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            app:layout_constraintBottom_toBottomOf="@+id/tv_safe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_safe"/>

        <TextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tv_safe"
            android:background="@drawable/bg_safe_zone"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:text="@string/safe"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingEnd="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_danger"
            app:layout_constraintTop_toTopOf="@+id/tv_danger"/>

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_danger"
            android:background="@drawable/bg_safe_non_select"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="@string/danger"
            android:paddingStart="12dp"
            android:paddingEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name_zone"/>

        <TextView
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/tvAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert"
            app:layout_constraintBottom_toBottomOf="@+id/cbEnter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cbEnter"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:textSize="14sp"
            android:textColor="#0e1724"
            android:ellipsize="end"
            android:id="@+id/cbEnter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="@drawable/check_selector"
            android:text="@string/create_zone_on_enter"
            android:maxLines="1"
            android:paddingStart="12dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_safe"
            app:layout_constraintStart_toStartOf="@+id/tv_safe"
            app:layout_constraintTop_toTopOf="@+id/cbLeave"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:textSize="14sp"
            android:textColor="#0e1724"
            android:ellipsize="end"
            android:id="@+id/cbLeave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:checked="true"
            android:button="@drawable/check_selector"
            android:text="@string/create_zone_on_leave"
            android:maxLines="1"
            android:paddingStart="12dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_danger"
            app:layout_constraintStart_toStartOf="@+id/tv_danger"
            app:layout_constraintTop_toBottomOf="@+id/tv_danger"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbLeave">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_delete_zone"
                android:background="@drawable/bg_btn_delete_zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/btn_update_zone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#ff543d"
                    android:gravity="center"
                    android:id="@+id/tv_delete"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:layout_marginStart="8dp"
                    android:paddingVertical="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_update_zone"
                android:background="@drawable/bg_btn_update_zone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_delete_zone"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#32be4b"
                    android:gravity="center"
                    android:id="@+id/tv_update"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:layout_marginStart="8dp"
                    android:paddingVertical="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_save_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbLeave">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="#32be4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/btnSaveZone"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_marginStart="8dp"
                    android:paddingVertical="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>