<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

<androidx.constraintlayout.widget.ConstraintLayout

    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:src="@drawable/bg_header_list_user_tracker"
        android:scaleType="fitXY"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_simple_back"
        android:contentDescription="@null"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_header"/>

    <TextView
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/_27sdp"
        android:layout_marginRight="50dp"
        android:text="@string/setting" android:layout_marginHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_list_user_tracking"
        android:paddingLeft="20dp"
        android:paddingTop="36dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:textSize="16sp"
            android:textColor="#0e1724"
            android:id="@+id/tv_set_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_avatar"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_avatar"
            app:layout_constraintStart_toEndOf="@+id/img_avatar"
            app:layout_constraintTop_toTopOf="@+id/img_avatar"/>

        <View
            android:id="@+id/line_set_avatar"
            android:background="#eceff1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/img_avatar"
            app:layout_constraintTop_toBottomOf="@+id/img_avatar"/>

        <View
            android:id="@+id/view_set_avatar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/line_set_avatar"
            app:layout_constraintTop_toTopOf="@+id/img_avatar"/>

        <ImageView
            android:id="@+id/img_setting_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_setting_notification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_set_avatar"/>

        <TextView
            android:textSize="16sp"
            android:textColor="#0e1724"
            android:id="@+id/tv_setting_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_notification"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_setting_notification"
            app:layout_constraintStart_toEndOf="@+id/img_setting_notification"
            app:layout_constraintTop_toTopOf="@+id/img_setting_notification"/>

        <View
            android:id="@+id/line_setting_notification"
            android:background="#eceff1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/img_setting_notification"
            app:layout_constraintTop_toBottomOf="@+id/img_setting_notification"/>

        <View
            android:id="@+id/view_setting_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/line_setting_notification"
            app:layout_constraintTop_toTopOf="@+id/img_setting_notification"/>

        <ImageView
            android:id="@+id/img_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_setting_language"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_setting_notification"/>

        <TextView
            android:textSize="16sp"
            android:textColor="#0e1724"
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_language"
            app:layout_constraintStart_toEndOf="@+id/img_language"
            app:layout_constraintTop_toTopOf="@+id/img_language"/>

        <View
            android:id="@+id/line_language"
            android:background="#eceff1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/img_language"
            app:layout_constraintTop_toBottomOf="@+id/img_language"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>