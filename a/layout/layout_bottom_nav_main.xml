<?xml version="1.0" encoding="utf-8"?><layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_2sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linearYourLocation"
            android:layout_width="0dp"
            android:layout_height="@dimen/_65sdp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearZoneAlert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relayYourLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/ivYourLocation"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/color_0E1724"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tvYourLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@string/your_location"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linearZoneAlert"
            android:layout_width="0dp"
            android:layout_height="@dimen/_65sdp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linear_friends"
            app:layout_constraintStart_toEndOf="@+id/linearYourLocation"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relayZoneAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/ivZoneAlert"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/color_6F7B8C"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tvZoneAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@string/zone_alert"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linear_friends"
            android:layout_width="0dp"
            android:layout_height="@dimen/_65sdp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearShare"
            app:layout_constraintStart_toEndOf="@+id/linearZoneAlert"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relay_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/iv_friend"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/color_6F7B8C"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@string/friends"
               />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linearShare"
            android:layout_width="0dp"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linear_friends"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relayShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/color_6F7B8C"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tvShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@string/share_my_location_btnShare"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
</layout>